<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quanly.QuanLyActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolbarQuanLy"
        app:title="Quản Lý"
        app:titleTextColor="@color/white"
        android:background="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ToolbarQuanLy"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnquanlydienthoai"
            android:background="@drawable/background_button_giohang1"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:text="Quản Lý Điện Thoại"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/btnquanlytaikhoan"
            android:background="@drawable/background_button_giohang1"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="Quản Lý Tài Khoản"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/btnquanlydonhang"
            android:background="@drawable/background_button_giohang1"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="Quản Lý Đơn Hàng"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/btnthongke"
            android:background="@drawable/background_button_giohang1"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="Thống Kê"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/btndangxuat"
            android:background="@drawable/background_button_giohang1"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:text="Đăng Xuất"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>