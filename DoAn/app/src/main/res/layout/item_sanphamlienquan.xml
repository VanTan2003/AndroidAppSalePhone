<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="186dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_sanpham"
            android:background="@drawable/ic_baseline_perm_media_24"
            android:layout_width="100dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/txt_tensanpham"
            android:text="Tên Sản Phẩm"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_giasanpham"
            android:text="Giá"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:background="@drawable/iconnew_w512"
        android:layout_width="35dp"
        android:layout_gravity="top|right"
        android:layout_height="35dp"/>
    <ImageView
        android:id="@+id/txthethangroi"
        android:background="@drawable/img1"
        android:layout_width="35dp"
        android:layout_gravity="top|left"
        android:layout_height="35dp"/>
</androidx.cardview.widget.CardView>