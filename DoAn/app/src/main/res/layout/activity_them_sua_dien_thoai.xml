<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quanly.ThemSuaDienThoaiActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolbarThemSuaDienThoai"
        app:title="Thêm Điện Thoại"
        app:titleTextColor="@color/white"
        android:background="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/img_camera"
            android:layout_gravity="center|right"
            android:layout_width="35dp"
            android:layout_marginRight="20dp"
            android:layout_height="35dp"
            android:src="@drawable/camera"
            />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/ToolbarThemSuaDienThoai"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_tensanpham"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:hint="Tên điện thoại"
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/edtcostum"
            />
        <EditText
            android:id="@+id/edt_giasp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:hint="Giá điện thoại"
            android:inputType="number"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/edtcostum"
            />
        <EditText
            android:id="@+id/edt_soluong"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:hint="Số lượng sản phẩm"
            android:drawablePadding="5dp"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/edtcostum"
            />
        <EditText
            android:id="@+id/edt_mota"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:hint="Mô tả sản phẩm"
            android:drawablePadding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/edtcostum"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_tenanh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:hint="Img.jpg"
                android:layout_marginTop="15dp"
                android:background="@drawable/edtcostum"
                />
        </LinearLayout>
        <Spinner
            android:id="@+id/spnloai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:drawablePadding="5dp"
            android:inputType="number"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/edtcostum"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center"
            android:id="@+id/btnthemsuadienthoai"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/background_button_giohang"
            android:layout_height="60dp"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="Thêm Sản Phẩm"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>