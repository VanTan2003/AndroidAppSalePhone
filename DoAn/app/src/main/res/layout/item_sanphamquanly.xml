<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/image_sanpham"
            android:background="@drawable/ic_baseline_perm_media_24"
            android:layout_width="100dp"
            android:layout_height="120dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:id="@+id/txt_idsanphamad"
                android:text="Id Sản Phẩm"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_tensanphamad"
                android:text="Tên Sản Phẩm"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#F44336"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_giasanphamad"
                android:text="Giá"
                android:layout_marginTop="10dp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_soluongsanphamad"
                android:text="Số Lượng: "
                android:textColor="#F44336"
                android:textStyle="bold"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>