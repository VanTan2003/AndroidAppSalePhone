<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:background="@drawable/screen"
    android:orientation="vertical"
    tools:context=".activity.DangNhapActivity">
    <TextView
        android:layout_width="wrap_content"
        android:text="CHÀO MỪNG BẠN"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Đăng Nhập !"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/emaildangnhap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:hint="Email"
        android:drawablePadding="5dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/dra_email"
        android:background="@drawable/edtcostum"
        />
    <EditText
        android:id="@+id/matkhaudannhap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/key_24"
        android:background="@drawable/edtcostum"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="center"
        android:id="@+id/btndangnhap"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_button_giohang"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Đăng Nhập"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Bạn chưa có tài khoản? "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/txtdangky"
            android:textColor="#F44336"
            android:text="Đăng Ký"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>