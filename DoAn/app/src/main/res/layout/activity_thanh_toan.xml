<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThanhToanActivity">
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ToolbarThanhToan"
        app:title="Thanh Toán"
        app:titleTextColor="@color/white"
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ToolbarThanhToan">
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_margin="5dp"
                android:padding="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/money_24"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/txttongtienthanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="25000"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    />
            </LinearLayout>
            <View
                android:background="#FFFF8D"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/person_24"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/txt_tenthanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Họ tên"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <View
                android:background="#FFFF8D"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_24"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/txt_sdtthanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="SDT"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <View
                android:background="#FFFF8D"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dra_email"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/txt_emailthanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="email.com"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <View
                android:background="#FFFF8D"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/cardView">
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/edt_diachigiaohang"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:hint="Nhập địa chỉ giao hàng"
            android:drawablePadding="5dp"
            android:background="@drawable/edtcustom1"
            android:drawableLeft="@drawable/location_on_24"
            android:textColorHint="#FF0000"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btndathang"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_button_giohang"
            android:text="Đặt Hàng"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>